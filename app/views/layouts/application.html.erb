<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlogV2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--    display flash-->
    <% flash.each do |name, msg| %>
      <ul>
        <li>
          <%= msg %>
        </li>
      </ul>
    <% end %>


    <%= yield %>
  </body>
</html>
